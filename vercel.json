{
  "version": 2,

  "buildCommand": "",
  "installCommand": "cd server && npm install",
  "outputDirectory": "",

  "functions": {
    "api/index.js": {
      "memory": 512,
      "maxDuration": 30,
      "includeFiles": "server/**"
    }
  },

  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "/api/index.js"
    }
  ],

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ]
}
