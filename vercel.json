{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://stem-adventures-api.shuttle.app/api/:path*"
    },
    {
      "source": "/health",
      "destination": "https://stem-adventures-api.shuttle.app/health"
    },
    {
      "source": "/metrics",
      "destination": "https://stem-adventures-api.shuttle.app/metrics"
    }
  ],

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ]
}
